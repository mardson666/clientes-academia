{{#each training}}
<div class="card" style="width: 18rem;" id="update"> 
  <div class="card-body">
    <h5 class="card-title">{{this.dataValues.name}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">{{this.dataValues.data_treino}}</h6>
    <p class="card-text">{{this.dataValues.observation}}</p>
    <form action="/exercises/delete" method="post">
      <input type="hidden" name="id" value="{{this.dataValues.id}}">
      <button type="submit" class="btn btn-primary">excluir</button>
    </form>
    <a href="#" class="card-link">editar treino</a>
    <a href="/training/exercise/{{this.dataValues.id}}" class="card-link">cadastrar exercicios nesse treino</a>
  </div>
</div>


{{/each}}
