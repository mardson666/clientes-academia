  <label for="data_treino">data do treino</label><br>
  <input type="text" name="data_treino" id=""><br>
  <input type="hidden" name="userId"  value="{{this.dataValues.id}}">
  <button type="submit" class="btn btn-primary">cadastrar</button>
</form>
{{/each}}