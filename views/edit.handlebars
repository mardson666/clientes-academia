    <input type="email" name="email"  value="{{user.dataValues.email}}"><br>
    <label for="number">Numero</label>
    <input type="text" name="number"  value="{{user.dataValues.numero}}"><br>
    <label for="data_nasci">Data de nascimento</label>
    <input type="date" name="data_nasci" id="data_nasci"  value="{{user.dataValues.data_nasci}}"><br>
