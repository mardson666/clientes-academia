<h1>LISTA DE ALUNOS</h1>


<a type="button"  class="btn btn-primary" href="/principal/cadastro">cadastrar </a>
{{#each erros}}
	<div class="alert alert-danger">{{texto}}</div>

{{else}}

{{/each}}

{{#each alunos}}

<div class="card mt-2" id="card" onclick="sumir()">
		<div class="card-body">
			<h3>{{this.dataValues.id}}-{{this.dataValues.nome}}</h3>
			<p>CPF:{{this.dataValues.cpf}}</p>
			<p>NUMERO: {{this.dataValues.numero}}</p>
            <P>PESO:{{this.dataValues.peso}}</P>
            <p>ALTURA:{{this.dataValues.altura  }}</p>
            <p>IMC:{{this.dataValues.imc}}</p>
            <p>DATA DE NASCIMENTO:{{this.dataValues.data_nasci}}</p>
            <p>EMAIL:{{this.dataValues.email}}</p>
            <p>STATUS:{{this.dataValues.status}}</p>
			<br><a href="/principal/edit/{{this.dataValues.id}}"><button class="btn btn-success mt-4" >Editar exercicio</button></a>
			<form action="/principal/delete" method="POST">
				<input type="hidden" name="id" value="{{this.dataValues.id}}">
				<button type="submit" class="btn btn-danger mt-3">Excluir exercicio</button>
			</form>
		</div>
	</div>
<br>
{{else}}
<p>nenhum aluno registrado</p>
{{/each}}