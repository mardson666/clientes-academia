<h1>LISTA DE ALUNOS</h1>


<a type="button"  class="btn btn-primary" href="/principal/cadastro">cadastrar </a>
<a href="/logout"><button type="button" class="btn btn-outline-dark">Sair da sessão</button></a>
{{#each erros}}
	<div class="alert alert-danger">{{texto}}</div>

{{else}}

{{/each}}

{{#each user}}

<div class="card mt-2" id="card" >
		<div class="card-body">
			<h3>{{this.dataValues.id}}-{{this.dataValues.name}}</h3>
			<p>CPF:{{this.dataValues.cpf}}</p>
			<p>NUMERO: {{this.dataValues.number}}</p>
            <p>IMC:{{this.dataValues.imc}}</p>
            <p>DATA DE NASCIMENTO:{{this.dataValues.data_nasci}}</p>
            <p>EMAIL:{{this.dataValues.email}}</p>
            <p>STATUS:{{this.dataValues.status}}</p>
			<br><a href="/principal/edit/{{this.dataValues.id}}" class="btn btn-success">Editar aluno</a><br>
			<a href="/measurement/{{this.dataValues.id}}" class="btn btn-primary">medições do corpo</a><br>
			<form action="/principal/delete" method="POST">
				<input type="hidden" name="id" value="{{this.dataValues.id}}">
				<button type="submit" class="btn btn-danger">Excluir aluno</button>
			</form>
			<a href="" class="btn btn-primary">Criar exercicio para este aluno</a>
		</div>
	</div>
<br>
{{else}}
<p>nenhum aluno registrado</p>
{{/each}}