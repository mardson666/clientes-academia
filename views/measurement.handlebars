  <input type="text" name="weight" id=""><br>
  <label for="">imc</label><br>
  <input type="text" name="imc" id=""><br>
  <label for="">bust</label><br>
  <input type="text" name="bust" id=""><br>
  <label for="">calf</label><br>
  <input type="text" name="calf" id=""><br>
  <label for="">hip</label><br>
  <input type="text" name="hip" id=""><br>
  <label for="">biceps</label><br>
  <input type="text" name="biceps" id=""><br>
  <label for="">thigh</label><br>
  <input type="text" name="thigh" id=""><br>
  <input type="hidden" name="userId" value="{{this.dataValues.id}}">
  <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>
{{else}}
{{/each}}
