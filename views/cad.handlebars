{{#each treinador}}
<a type="button"  class="btn btn-primary" href="/principal/alunos">voltar </a>
<div class="card-body">
<form action="/principal/cad" method="POST" id="form" >
    <label for="nome">Nome</label><br>
    <input type="text" name="nome" ><br>
    <label for="cpf">CPF</label><br>
    <input type="text" name="cpf" id="cpf" ><br>
    <label for="email">E-mail</label><br>
    <input type="email" name="email" ><br>
    <label for="numero">Numero</label><br>
    <input type="text" name="numero"  ><br>
    <label for="peso">Peso</label><br>
    <input type="text" name="peso"  ><br>
    <label for="altura">Altura</label><br>
    <input type="text" name="altura" ><br>
    <label for="data_nasci">Data de nascimento</label><br>
    <input type="date" name="data_nasci" id="data_nasci" ><br>
    <label for="status">Status</label><br>
    <input type="text" name="status"  value=""><br>
    <input type="hidden" name="treinadorid" value="{{this.dataValue.id}}">
    <input type="submit"  value="cadastrar">
</form>
</div>
{{else}}
{{/each}}